{{#if questionForm}}
  <form>
    <div class="form-group">
      <label for="title">What is your question?</label>
      {{input value=title id="title" name="title" type="text" class="form-control" placeholder="Best place to buy mangoes?"}}
    </div>

    <div class="form-group">
      <label for="author">Your Name</label>
      {{input value=author id="author" name="author" type="text" class="form-control" placeholder="joe schmo"}}
    </div>

    <button class="btn btn-success"{{action 'saveQuestion'}}>Save Question</button>
    <button class="btn btn-warning" {{action 'questionFormHide'}}>Nevermind!</button>
  </form>
{{else}}
  <button class="btn btn-primary"{{action "questionFormShow"}}>Add a Question</button>
{{/if}}
{{#each model as |question|}}
<div class="jv-tile">
  <div class="col-md-4">
    <h3>{{question.title}} <small>{{question.author}}</small></h3>
    <button class="btn btn-danger">Delete</button>
  </div>
</div>
{{/each}}
