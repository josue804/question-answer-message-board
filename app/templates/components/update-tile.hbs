
{{#if updateForm}}
<form>
  <div class="form-group">
    <label for="title">What is your question?</label>
    {{input value=title id="title" name="title" type="text" class="form-control" value=question.title}}
  </div>

  <div class="form-group">
    <label for="author">Your Name</label>
    {{input value=author id="author" name="author" type="text" class="form-control" value=question.author}}
  </div>

  <button class="btn btn-success"{{action 'updateQuestion' question}}>Save Edit</button>
  <button class="btn btn-warning" {{action 'updateFormHide'}}>Nevermind!</button>
</form>
{{else}}
  <button class="btn btn-default" {{action 'updateFormShow'}}>Edit</button>
{{/if}}
